<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:gravity="center"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:background="@drawable/blue_button"
            android:drawable="@drawable/blue_button"
            android:onClick="sound1"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <Button
            android:background="@drawable/blue_button"
            android:drawable="@drawable/blue_button"
            android:onClick="sound2"
            android:layout_marginLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />


        <Button
            android:background="@drawable/blue_button"
            android:drawable="@drawable/blue_button"
            android:layout_marginLeft="5dp"
            android:onClick="sound3"
            android:layout_width="100dp"
            android:layout_height="100dp" />


    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/purple_button"
            android:drawable="@drawable/purple_button"
            android:onClick="sound4"
            android:layout_marginLeft="5dp"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <Button
            android:background="@drawable/orange_button"
            android:drawable="@drawable/orange_button"
            android:layout_marginLeft="5dp"
            android:onClick="sound5"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <Button
            android:background="@drawable/pink_button"
            android:drawable="@drawable/pink_button"
            android:layout_marginLeft="5dp"
            android:onClick="sound6"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:background="@drawable/green_button"
            android:drawable="@drawable/green_button"
            android:onClick="sound7"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <Button
            android:background="@drawable/green_button"
            android:drawable="@drawable/green_button"
            android:layout_marginLeft="5dp"
            android:onClick="sound8"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <Button
            android:background="@drawable/pink_button"
            android:drawable="@drawable/pink_button"
            android:layout_marginLeft="5dp"
            android:onClick="sound9"
            android:layout_width="100dp"
            android:layout_height="100dp" />

    </LinearLayout>


</LinearLayout>


